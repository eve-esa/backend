# =========================
# Core Services
# =========================
# Qdrant vector DB endpoint and API key (required)
# Docs: https://qdrant.tech/documentation/quick-start/
QDRANT_URL=
QDRANT_API_KEY=

# Language model providers
# Used LLM is defined in constants.py (DEFAULT_LLM)
# Mistral native API key (optional, used as fallback and for some flows)
# Docs: https://docs.mistral.ai/getting-started/quickstart/
MISTRAL_API_KEY=
# OpenAI-compatible key (optional, only required if you use OpenAI directly)
# Docs: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=
# Hugging Face Hub token (optional, for models/downloads)
# Docs: https://huggingface.co/settings/tokens
HUGGINGFACEHUB_API_TOKEN=

# Runpod configuration
# API key for Runpod (required) and optional model name override
# Docs: https://www.runpod.io
RUNPOD_API_KEY=
RUNPOD_MODEL_NAME=eve-esa/eve-lora-merged

# =========================
# Database (MongoDB)
# Required for persistence
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USERNAME=
MONGO_PASSWORD=
MONGO_DATABASE=eve_backend

# =========================
# Auth & JWT
# JWT secret is required – generate a strong random string yourself
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_AUDIENCE_ACCESS=access
JWT_AUDIENCE_REFRESH=refresh

# =========================
# Email (SMTP)
# Required if you need to send emails (password reset, notifications, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@eve-ai.com
EMAIL_FROM_NAME=EVE AI

# =========================
# Web & CORS
# Required for frontend integration
FRONTEND_URL=http://localhost:5173
# Array separated with commas
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost

# =========================
# Features & Timeouts
FORGOT_PASSWORD_CODE_EXPIRE_MINUTES=10
# Wiley integration token (optional, only if Wiley integration is enabled)
# Docs: https://api.wiley.com
WILEY_AUTH_TOKEN=

# =========================
# Config file path override
EVE_CONFIG_PATH=config.yaml

# =========================
# Mistral base URL override (advanced, optional)
MISTRAL_BASE_URL=https://api.mistral.ai/v1

# =========================
# Environment
# Use real public collections from Qdrant when available; always prepend Wiley's collections (and in non‑prod also include the dev test collection "esa-data-qwen-1024").
IS_PROD=false
